    <script>
                function Hidepreloader(){
                //document.getElementById("preloader").style.display = "none";
                //document.getElementById("status").style.display = "none";
                };

                function scrollToTab(elementId){
                    var elem = document.getElementById(elementId);
                    console.log(elem);
                    if (elem) {
                        elem.scrollIntoView();
                        //window.location.hash = elementId;
                }

            };

                window.ChangeUrl = function(url){
                         history.pushState(null, '', url);
                };

                function clearDropdownui(){
                     $('#dropdownGenre').dropdown('clear');
                      $('#dropdownList').dropdown('clear');
                };

                 // When the user clicks the button, the page scrolls to the top
                function OnScrollEvent() {
                    document.documentElement.scrollTop = 0;
                };

            function CloseIframeYoutube(){

                $("#movieTrailer iframe").attr("src", $("#movieTrailer iframe").attr("src"));

            };

                    function MultiselectInit() {

                    //js for multi selected
                var multiselect = $(".ui.fluid.dropdown");
                multiselect.dropdown({
                    allowLabels: true,
                    clearable: true
                });

                multiselect.dropdown({ 'set selected': 'Role1,Role2' });

                };

 function SliderInit(){
        var multiItem = $('.slick-multiItem');
     
             //main slider home 1
            var multiItemSlider = $('.slick-multiItemSlider');
            multiItemSlider.slick({
                infinite: true,
                slidesToShow: 4,
                slidesToScroll: 4,
                arrows: true,
                draggable:true,
                autoplay: false,
                autoplaySpeed: 10000,
                dots: true
            });

            
	//slider movie and tv show home 1, 3
	multiItem.slick({
		infinite: true,
		slidesToShow: 4,
		slidesToScroll: 4,
		arrows: false,
		draggable:true,
		// autoplay: true,
		// autoplaySpeed: 2000,
		dots: true,
		responsive: [
	    {
	      breakpoint: 1024,
	      settings: {
	        slidesToShow: 3,
	        slidesToScroll: 3,
	        infinite: true,
	        dots: true
	      }
	    },
	    {
	      breakpoint: 768,
	      settings: {
	        slidesToShow: 2,
	        slidesToScroll: 2
	      }
	    },
	    {
	      breakpoint: 480,
	      settings: {
	        slidesToShow: 1,
	        slidesToScroll: 1
	      }
	    }
	  ]
	});

                };
    </script>

