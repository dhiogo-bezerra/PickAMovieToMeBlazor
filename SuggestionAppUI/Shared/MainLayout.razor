@inherits LayoutComponentBase
@inject NavigationManager navManager

<PageTitle>Dhiogo Page</PageTitle>


<!-- BEGIN | Header -->
<header class="ht-header">
	<div class="container">
		<nav class="navbar navbar-default navbar-custom">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header logo">
				    <div class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					    <span class="sr-only">Toggle navigation</span>
					    <div id="nav-icon1">
							<span></span>
							<span></span>
							<span></span>
						</div>
				    </div>
				    <a href="" @onclick="@(() => NavPage(""))"><img class="logo" src="images/logo1.png" alt="" width="119" height="58"></a>
			    </div>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse flex-parent" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav flex-child-menu menu-left">
						<li class="hidden">
							<a href="#page-top"></a>
						</li>
						<li>
							<a class="btn btn-default dropdown-toggle lv1" @onclick="@(() => NavPage(""))">   <i class="fa fa-home" aria-hidden="true"></i>	Home </a>

						</li>
						<li>
							<a class="btn btn-default dropdown-toggle lv1"  @onclick="@(() => NavPage("movielist"))">   <i class="fa fa-list-ul" aria-hidden="true"></i>	Movie List </a>
						</li>
						<li>
							<a class="btn btn-default dropdown-toggle lv1"  @onclick="@(() => NavPage("movie"))">   <i class="fa fa-random" aria-hidden="true"></i>	Random Movie </a>
						</li>
						<li>
							<a class="btn btn-default dropdown-toggle lv1"  @onclick="@(() => NavPage("movieguess"))">   <i class="fa fa-gamepad" aria-hidden="true"></i>	Guess The Movie </a>
						</li>
					</ul>
				
				</div>
			<!-- /.navbar-collapse -->
	    </nav>
	    
	</div>
</header>
<!-- END | Header -->

<div class="page">  
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

    <!-- footer section-->
    <footer class="ht-footer">
        <div class="container">
            <div class="flex-parent-ft">
                <div class="flex-child-ft item1">
                    <a href="index.html"><img class="logo" src="images/logo1.png" alt=""></a>
                    <p>
                        
                    </p>
                    <p>Contact: <a href="#"> </a></p>
                </div>
                <div class="flex-child-ft item2">
                    <h4>Resources</h4>
                    <ul>
                        <li><a class="alink" @onclick="@(() => NavPage(""))">Home</a></li>
                        <li><a class="alink"  @onclick="@(() => NavPage("movielist"))">MovieList</a></li>
                        <li><a class="alink"  @onclick="@(() => NavPage("movie"))">Random Movie</a></li>
                        <li><a class="alink"   @onclick="@(() => NavPage("movieguess"))">Guess The Movie</a></li>
                    </ul>
                </div>
                <div class="flex-child-ft item3">
                    <h4>Legal</h4>
                </div>
                <div class="flex-child-ft item4">
                </div>
                <div class="flex-child-ft item5">
                </div>
            </div>
        </div>
        <div class="ft-copyright">
            <div class="ft-left">
                <p>© 2022 Mozif. All Rights Reserved. Designed by Dhiogo Bezerra.</p>
            </div>
            <div class="backtotop">
                <p><a href="#" id="back-to-top">Back to top  <i class="ion-ios-arrow-thin-up"></i></a></p>
            </div>
        </div>
    </footer>
    <!-- end of footer section-->

@code {

	    public void NavPage(string page)
        {
            navManager.NavigateTo("/" + page);
        }
}